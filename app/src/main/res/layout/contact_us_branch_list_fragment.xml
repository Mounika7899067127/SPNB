<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >

        <!--  textview with down arrow -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="STATE NAME"
            android:id="@+id/state_name"
            android:textSize="22dp"
            android:drawableRight="@drawable/down_arrow"
            android:textAllCaps="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            />

        <!--  textview with up arrow -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TITLE goes here"
            android:id="@+id/state_name2"
            android:textSize="20dp"
            android:drawableRight="@drawable/sort_up"
            android:textAllCaps="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:layout_weight="0.03"
            android:visibility="gone"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textboxbackground"
        android:visibility="gone">

        <TextView
            android:id="@+id/address_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="details here"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:autoLink="email"
            android:textColorLink="@color/textColorLink"
            />
    </LinearLayout>

    <!--  divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:background="#DADADC" ></View>

</LinearLayout>